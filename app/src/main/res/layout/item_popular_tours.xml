<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        card_view:cardCornerRadius="10dp"
        android:elevation="8dp"
        android:layout_margin="30dp"
        >
        <RelativeLayout
            android:id="@+id/relativeOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        <ImageView
            android:id="@+id/ivBgPopular"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/resource_image"/>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/ivBgPopular"
            android:weightSum="3"
            android:layout_marginTop="17dp"
            android:backgroundTint="#FFFFFF">
            <TextView
                android:id="@+id/tvPopularCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thailand"
                android:backgroundTint="#FFFFFF"
                android:layout_marginStart="70dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tvPopularLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 nights for two/all inclusive"
                android:textSize="10sp"
                android:textColor="#A09B9B"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"/>
<!--            <LinearLayout-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:orientation="horizontal"-->
<!--                android:layout_marginStart="50dp"-->
<!--                android:layout_marginTop="5dp">-->

<!--                <TextView-->
<!--                    android:id="@+id/tvTourLocation"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="20dp"-->
<!--                    android:text="$"-->
<!--                    android:textSize="15sp" />-->
<!--            <TextView-->
<!--                android:id="@+id/tvPopularScore"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="240.50"-->
<!--                android:textSize="15sp" />-->
<!--            </LinearLayout>-->

        </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
           android:layout_margin="20dp">
            <androidx.cardview.widget.CardView
                android:layout_width="25dp"
                android:layout_height="45dp"
                android:layout_gravity="bottom"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginStart="100dp"
                android:layout_marginBottom="10dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:backgroundTint="#D3818181">

                    <TextView
                        android:id="@+id/tvPopularRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="4.3"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp" />
                    <ImageView
                        android:id="@+id/ivStar"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:backgroundTint="#FFFFFF"
                        android:src="@drawable/ic_star_24dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>