<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:elevation="8dp"
        android:layout_weight="1"
        android:backgroundTint="#CFE0EE">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/ivBookMark"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/ic_library_books_black_24dp"/>
            <TextView
                android:id="@+id/tvBookingName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking"
                android:layout_toEndOf="@id/ivBookMark"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/tvMaxScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_max_score"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_below="@id/tvBookingName"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@id/ivBookMark"/>
            <TextView
                android:id="@+id/tvReviewRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_total_review"
                android:textSize="10sp"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/tvMaxScore"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>